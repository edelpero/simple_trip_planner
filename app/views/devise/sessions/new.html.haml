.ui.three.column.page.grid
  .column
  .column
    .ui.huge.header.title
      %span Simple
      TripPlanner
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui form segment'}) do |f|
      %h3.ui.header Sign in
      .field
        = f.label :email
        .ui.left.labeled.icon.input
          = f.email_field :email, autofocus: true
          %i.user.icon
      .field
        = f.label :password
        .ui.left.labeled.icon.input
          = f.password_field :password, autocomplete: "off"
          %i.lock.icon
      - if devise_mapping.rememberable?
        .inline.field
          .ui.checkbox
            = f.check_box :remember_me
            = f.label :remember_me
      .field
        = f.submit "Sign in", class: 'ui green fluid small button'
      = render "devise/shared/links"
  .column
